<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.ghr.VictimSettingActivity"
    android:orientation="vertical"
    android:padding="20sp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="125sp"
        android:layout_height="125sp"
        android:id="@+id/profileImage"
        android:src="@mipmap/ic_launcher_user"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/victimName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Name"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/victimPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="YourPhone"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/victimPhone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Relative1"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/victimPhone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Relative2"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="phone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20sp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textSize="23sp"
            android:layout_weight="1"
            />

        <Spinner
            android:id="@+id/bloodgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:layout_weight="1"
            android:layout_marginBottom="20sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/allergy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Allergy"
        android:layout_marginBottom="20sp"
        android:textSize="25sp"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20sp"
        android:weightSum="2"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:layout_weight="1"
            android:id="@+id/confirm"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_weight="1"
            android:id="@+id/back"/>

    </LinearLayout>


    </LinearLayout>




</ScrollView>
